@model IEnumerable<string>

@{
    ViewBag.Title = "Error";
}

<h2>Error</h2>

<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Something went wrong. Please try again
            break;

        case 1:
            @Model.First()
            break;

        default:
            @: The following were encountered:
            <ul>
                @foreach (var error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>

@Html.ActionLink("OK", "Index", "Home", null, new { @class = "btn btn-default" })